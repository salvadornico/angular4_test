h1 {{name}}
ul
	li Age: {{age}}
	li Email: {{email}}
	li {{address.street}}, {{address.city}} {{address.state}}

button('(click)'="onClick()") Click Me
button('(click)'="toggleEdit()") Edit User

div(*ngIf="isEdit")
	h2 Edit user
	form
		label(for="name") Name: 
		input(type="text" '[(ngModel)]'="name" name="name")
		br
		label(for="age") Age: 
		input(type="number" '[(ngModel)]'="age" name="age")
		br
		label(for="email") email: 
		input(type="text" '[(ngModel)]'="email" name="email")
		br
		label(for="street") street: 
		input(type="text" '[(ngModel)]'="address.street" name="street")
		br
		label(for="city") city: 
		input(type="text" '[(ngModel)]'="address.city" name="city")
		br
		label(for="state") state: 
		input(type="text" '[(ngModel)]'="address.state" name="state")

h3 Hobbies
form('(submit)'="addHobby(hobby.value)")
	div
		label(for="hobby") Hobby
		input(type="text" #hobby)
ul
	li(*ngFor="let hobby of hobbies; let i = index") {{i + 1}} {{hobby}}
		button('(click)'="deleteHobby(hobby)") X

h3 Posts
div(*ngFor="let post of posts")
	h4 {{post.title}}
	p {{post.body}}